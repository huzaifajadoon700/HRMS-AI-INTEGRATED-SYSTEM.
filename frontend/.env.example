# API Configuration
# For local development:
# REACT_APP_SERVER_URL=http://localhost:8080
# REACT_APP_API_URL=http://localhost:8080
# REACT_APP_API_BASE_URL=http://localhost:8080/api

# For production (Vercel):
# Replace YOUR_BACKEND_NAME with your actual Vercel backend deployment name
REACT_APP_SERVER_URL=https://YOUR_BACKEND_NAME.vercel.app
REACT_APP_API_URL=https://YOUR_BACKEND_NAME.vercel.app
REACT_APP_API_BASE_URL=https://YOUR_BACKEND_NAME.vercel.app/api

# Stripe Configuration
# Replace with your own Stripe public key
REACT_APP_STRIPE_PUBLIC_KEY=YOUR_STRIPE_PUBLIC_KEY

# Google OAuth Configuration
# Replace with your own Google OAuth client ID
REACT_APP_GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID

# MapBox Configuration (Optional)
REACT_APP_MAPBOX_ACCESS_TOKEN=your_mapbox_token

# App Configuration
REACT_APP_APP_NAME=HRMS
REACT_APP_VERSION=1.0.0

# Feature Flags
REACT_APP_ENABLE_RECOMMENDATIONS=true
REACT_APP_ENABLE_PAYMENTS=true
REACT_APP_ENABLE_GOOGLE_AUTH=true
